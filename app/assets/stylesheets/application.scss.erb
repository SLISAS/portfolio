@import "bootstrap";

:root {
  --blue: #007bff;
  --indigo: #6610f2;
  --purple: #6f42c1;
  --pink: #e83e8c;
  --red: #dc3545;
  --orange: #fd7e14;
  --yellow: #ffc107;
  --green: #28a745;
  --teal: #20c997;
  --cyan: #17a2b8;
  --white: #fff;
  --gray: #6c757d;
  --gray-dark: #343a40;
  --primary: #007bff;
  --secondary: #6c757d;
  --success: #28a745;
  --info: #17a2b8;
  --warning: #ffc107;
  --danger: #dc3545;
  --light: #f8f9fa;
  --dark: #343a40;
  --breakpoint-xs: 0;
  --breakpoint-sm: 576px;
  --breakpoint-md: 768px;
  --breakpoint-lg: 992px;
  --breakpoint-xl: 1200px;
  --font-family-sans-serif: -apple-system, BlinkMacSystemFont, "Segoe UI",
    Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif,
    "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
  --font-family-monospace: SFMono-Regular, Menlo, Monaco, Consolas,
    "Liberation Mono", "Courier New", monospace;
}

* {
  text-decoration: none !important;
}

body {
  background-color: var(--dark) !important;
}

//   header

.navbar-extend {
  text-decoration: none;
  margin-bottom: 0;
  color: var(--yellow);
  background-color: var(--gray-dark);
  opacity: 0.9;
  ul li a button {
    color: var(--yellow);
    padding: 0.375rem 1.5rem;
  }
}

.navbar-brand-extend {
  .logo-img:hover {
    color: var(--yellow);
    opacity: 0.6;
  }

  .logo-text {
    padding-top: 2px;
    color: var(--yellow);
    :hover {
      opacity: 0.6;
    }
  }
}

// jumbotron

.jumbotron-extend {
  margin-top: 4.2rem;
  background-image: url(<%=asset_path"images.jpeg"%>);
  background-size: cover;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  z-index: 0;
  overflow: hidden;
  .container {
    h1,
    h2,
    p {
      margin-bottom: 0.75rem;
      color: var(--yellow);
    }
    h1 {
      margin-bottom: 1.5erm;
    }
  }
}

.jumbotron-extend:before {
  content: "";
  background: inherit;
  -webkit-filter: blur(4px);
  -moz-filter: blur(4px);
  -o-filter: blur(4px);
  -ms-filter: blur(4px);
  filter: brightness(70%) blur(4px);
  position: absolute;
  top: -4px;
  left: -4px;
  right: -4px;
  bottom: -4px;
  z-index: -1;
  box-shadow: 0px 0px 30px #333;
}

//discription

.discription-container h2,
.discription-container p {
  color: var(--light);
  float: left;
}

.discription-container {
  float: left;
  margin: 3rem 0;
  padding: 3rem 1rem;
  h2 {
    font-size: 1.6rem;
    text-align: center;
    margin-bottom: 1.8rem;
  }
  p {
    font-size: 1rem;
    line-height: 2.1rem;
  }
  .img-container {
    margin-bottom: 3rem;
    text-align: center;
    color: var(--light);
  }
}
