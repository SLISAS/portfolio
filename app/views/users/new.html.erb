<% provide(:title, "Lets create your account")%>
<div class="container signup-container">
  <div class="row">
    <div class="col">
      <div class="signup-logo-img">
      </div>
      <h1 class="signup-title">New User</h1>
      <%= form_with(model: @user, url: signup_path, local:true) do |form| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
          <%= form.text_field :name, class: 'form-control', placeholder: "name"%>
        </div>
        <div class="form-group">
          <%= form.email_field :email, class: 'form-control', placeholder: "email"%>
        </div>
        <div class="form-group">
          <%= form.password_field :password, class: 'form-control', placeholder: "password"%>
        </div>
        <div class="form-group">
          <%= form.password_field :password_confirmation, class: 'form-control', placeholder: "password_confirmation"%>
        </div>
        <div class="form-group">
          <%= form.submit "Create!", class: 'btn btn-info btn-lg form-submit'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
