<% provide(:title, "Log in")%>
<div class="container form-container login-container">
  <div class="row">
    <div class="col">
      <div class="form-logo-img">
      </div>
      <h1 class="form-title">Log in</h1>
      <%= form_with(scope: :session, url:login_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.email_field :email, class: 'form-control', placeholder:"email" %>
        </div>
        <div class="form-group">
          <%= form.submit "login", class: "btn btn-info btn-lg form-submit"%>
        </div>
      <% end %>
      <p class="form-go-to-signup-or-login">
        New user?
        <%= link_to 'here', signup_path %>
      </p>
    </div>
  </div>
</div>
